<header>
    <nav class="main-header-nav" id="main-header-nav">
        <ul id="ul-li-a">
            <li><a href="/">
                <img src="/images/viewhubLogo.png" alt="viewhubLogo">
            </a></li>
        </ul>

        <!-- dynamicaly render this section based on loginState -->
    </nav>
    
    <div class="profile-nav">
        <div class="current-user" id="current-user">
            <img src="/images/tagsbg.jpg" alt="example_img" class="big_img" id="big_img">
            <h2 class="current-user-name" id="current-user-name">User</h2>
        </div>
        <div class="profile-action-buttons hidden" id="profile-action-buttons">
            <button type="submit" class="hidden" id="profileBtn">Profile</button>
            <button type="submit" class="hidden" id="uploadBtn">Upload</button>
            <button type="submit" class="hidden" id="uploadShortsBtn">Upload Shorts</button>
            <button type="submit" class="hidden" id="settingBtn">Settings</button>
            <button type="submit" class="hidden" id="logoutBtn">Logout</button>
        </div>
    </div>
    
    <script src="/js/signInAuth" defer></script>
    <script>
        document.getElementById("current-user").addEventListener("click", (e) => {
            e.preventDefault();

            //remove hidden if it is hidden
            toggleDisplay(["profile-action-buttons", "profileBtn", "logoutBtn", "uploadBtn", "uploadShortsBtn", "settingBtn"]);
            
        })

        document.getElementById("uploadBtn").addEventListener("click", ()=> {
            if (localStorage.getItem("userDetails")) {
                location.href = "/nav/upload_video";
            }
        })
        
        document.getElementById("uploadShortsBtn").addEventListener("click", ()=> {
            if (localStorage.getItem("userDetails")) {
                location.href = "/nav/upload_shorts_video";
            }
        })
       
        document.getElementById("settingBtn").addEventListener("click", ()=> {
            if (localStorage.getItem("userDetails")) {
                location.href = "/user/settings";
            }
        })


        function toggleDisplay(array) {
            if (document.getElementById(array[0]).classList.contains("hidden")) {
                for (let item of array) {
                    document.getElementById(item).classList.remove("hidden");
                }
            }
            else {
                for (let item of array) {
                    document.getElementById(item).classList.add("hidden");
                }
            }
        }
    </script>
</header>