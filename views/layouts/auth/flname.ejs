<div>
    <form action="/update/name" method="post">
        <input type="hidden" name="userId" value="<%= userId %>">
        <div>
            <label for="firstname"><b>First name</b></label>
            <input type="text" name="firstname" id="firstname" class="user-input" required>
        </div>

        <div>
            <label for="lastname"><b>Last name</b></label>
            <input type="text" name="lastname" id="lastname" class="user-input" required>
        </div>

        <div>
            <input type="submit" value="Next" id="next-btn">
        </div>
    </form>
</div>